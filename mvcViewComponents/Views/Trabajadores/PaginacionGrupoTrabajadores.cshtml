@model IEnumerable<mvcViewComponents.Models.Trabajador>

@{
    ViewData["Title"] = "PaginacionGrupoTrabajadores";
}

<h1>Paginacion Grupo Trabajadores</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="card p-3 col-5">

    <form method="post">
        <label>Salario : </label>
        <input class="form-control" type="text" name="salario" /><br />
        <button class="btn btn-success">Filtrar</button>
    </form>
  
</div>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.IdTrabajador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oficio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.IdTrabajador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Oficio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salario)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
@{
    int numeroregistros = (int)ViewData["REGISTROS"];
    int numeropagina = 1;
}
<ul class="list-group list-group-horizontal">
    @for (int i = 1; i < numeroregistros; i += 4)
    {
        <li class="list-group-item">
            <a asp-controller="Trabajadores"
               asp-action="PaginacionGrupoTrabajadores"
               asp-route-posicion="@i">
                @numeropagina
            </a>
        </li>
        numeropagina += 1;

    }
</ul>
